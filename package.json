{
  "name": "@context-control/mcp",
  "version": "1.0.0",
  "description": "Context Control MCP - Git-powered context management for AI sessions. Reduces context from 200k to 3k tokens.",
  "type": "module",
  "main": "context-control-server.js",
  "bin": {
    "ccmcp": "./cli/ccmcp.js"
  },
  "scripts": {
    "start": "node context-control-server.js",
    "dev": "node --watch context-control-server.js",
    "test": "jest",
    "build": "echo 'No build needed for MCP server'",
    "setup": "node setup.js",
    "hooks": "node context-control-server.js --command setup_hooks",
    "dashboard": "node context-control-server.js --command metrics_dashboard",
    "resume": "node context-control-server.js --command smart_resume",
    "status": "node context-control-server.js --command roadmap_status",
    "init": "node context-control-server.js --command iniciar_sesion"
  },
  "keywords": [
    "mcp",
    "context-management",
    "ai-session",
    "git-hooks",
    "claude",
    "token-optimization",
    "development-tools",
    "version-control",
    "roadmap-tracking",
    "ai-context",
    "session-bridge",
    "smart-resume"
  ],
